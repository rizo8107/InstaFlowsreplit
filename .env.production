# =============================================================================
# REQUIRED - You must set these before deploying
# =============================================================================

# Generate with: openssl rand -hex 32
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_HEX_STRING

# Get from: https://developers.facebook.com/apps
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Your public domain (e.g., https://instagram.yourdomain.com)
OAUTH_BASE_URL=https://yourdomain.com

# Custom webhook verification token (any random string)
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token

# Secure database password
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# =============================================================================
# OPTIONAL - These have good defaults, only change if needed
# =============================================================================

# AI Features (optional)
# GEMINI_API_KEY=

# Facebook Integration (optional)
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=

# =============================================================================
# AUTO-CONFIGURED - No need to change these
# =============================================================================

# Webhook auto-subscription (enabled by default)
AUTO_SUBSCRIBE_WEBHOOKS=true
WEBHOOK_FIELDS=comments,messages,mentions,story_insights

# Database configuration (auto-configured in Dokploy)
POSTGRES_USER=postgres
POSTGRES_DB=instagram_automation
POSTGRES_PORT=5432

# Server configuration
PORT=5000
NODE_ENV=production
